<h2>Available Boats:</h2>

<% @boats.each do |boat| %>
  <div class='boat-card'>
    <% unless boat.photo.nil? %>
      <%= cl_image_tag boat.photo, height: 200, width: 200, crop: :fill %>
    <% end %>
    <h3><%=boat.name%></h3>
    <p>Location: <%=boat.location%></p>
    <p>Price per day: <%=boat.price%> $</p>
    <p>Capacity: <%=boat.capacity%> • Length: <%=boat.length%>m • Rooms: <%=boat.room_number%> • Sleeps: <%=boat.sleep_number%> • Bathrooms: <%=boat.bathroom_number%> • Decks: <%=boat.deck_number%> • Gallons per Hour: <%=boat.gallons_per_hour%> </p>
    <p>Owner: <%=boat.user.name%></p>
  <ul class="action_list">
        <li><%= link_to "More info", boat_path(boat), class: "btn"%></li>
        <li><%= link_to "Edit", edit_boat_path(boat), class: "btn"%></li>
        <li><%= link_to "Remove", boat_path(boat),
          method: :delete,
          data: { confirm: "Are you sure?" },
          class: "btn" %>
      </ul>
  </div>
<% end %>

<%= link_to "Add Boat", new_boat_path, class: "btn"%>

